<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <div class="row mt-4">
  <div class="col-md-6">
    <h3>Comments:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment">Add a comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
  </p>
    {{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Previous Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{comment.id}}">{{comment.contents}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>